<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyMusicianList"
        tools:targetApi="31">
        <activity
            android:name=".ui.menus.MusicianProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_musician_profile"
            android:theme="@style/Theme.MyMusicianList" />
        <activity
            android:name=".ui.menus.DetailScreen"
            android:exported="false"
            android:label="@string/title_activity_detail_screen"
            android:theme="@style/Theme.MyMusicianList" />
        <activity
            android:name=".ui.menus.UserProfile"
            android:exported="false"
            android:theme="@style/Theme.MyMusicianList" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyMusicianList">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>